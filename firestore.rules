rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    match /users/{userId} {
      allow read, write: if isOwner(userId);

      match /notifications/{notificationId} {
        allow read, list: if isOwner(userId);
        // Allow any signed-in user to create notifications for development purposes.
        allow create: if isSignedIn(); 
        allow write: if isOwner(userId);
      }
    }
    
    match /carriers/{carrierId} {
      allow read: if true;
      allow write: if isSignedIn();
    }

    match /trips/{tripId} {
      allow read, list: if true;
      allow create: if isSignedIn();
      allow update: if isSignedIn() && isOwner(resource.data.userId);
      allow delete: if isSignedIn() && isOwner(resource.data.userId);

      match /offers/{offerId} {
        allow read, list: if isOwner(get(/databases/$(database)/documents/trips/$(tripId)).data.userId);
        allow create: if isSignedIn();
        // Allow the user who owns the trip to update the offer (to accept/reject it)
        allow update: if isOwner(get(/databases/$(database)/documents/trips/$(tripId)).data.userId);
        allow delete: if false;
      }
    }

    match /bookings/{bookingId} {
      // Allow any signed-in user to create their own booking.
      allow create: if isSignedIn() && isOwner(request.resource.data.userId);
      // Allow user who created booking OR the carrier to read it.
      allow read: if isSignedIn() && (isOwner(resource.data.userId) || isOwner(resource.data.carrierId));
      // Allow user who created booking to cancel it.
      allow delete: if isSignedIn() && isOwner(resource.data.userId);
      // Allow any signed-in user to update the booking for development purposes (simulating carrier confirmation).
      allow update: if isSignedIn();
    }

    match /ratings/{ratingId} {
      allow create: if isSignedIn() && isOwner(request.resource.data.userId);
      allow read: if true;
      allow update, delete: if false;
    }
  }
}
