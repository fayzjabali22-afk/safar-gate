rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    match /users/{userId} {
      allow read, write: if isOwner(userId);
    }
    
    match /carriers/{carrierId} {
      // Publicly readable, but only writable by authenticated users (e.g. the carrier themselves)
      allow read: if true;
      allow write: if isOwner(carrierId);
    }

    match /trips/{tripId} {
      allow read, list: if true;
      allow create: if isOwner(request.resource.data.userId);
      allow update, delete: if isOwner(resource.data.userId);

      // --- New Rules for Offers Subcollection ---
      match /offers/{offerId} {
        // The user who created the trip can read the offers.
        allow read, list: if isOwner(get(/databases/$(database)/documents/trips/$(tripId)).data.userId);
        
        // Any authenticated user can create an offer (we'll assume this is a carrier).
        // This can be tightened later by adding a 'carrier' role.
        allow create: if isSignedIn();
        
        // Only the user who created the trip can accept/reject an offer (update status).
        allow update: if isOwner(get(/databases/$(database)/documents/trips/$(tripId)).data.userId);
        
        allow delete: if false; // Offers should not be deleted.
      }
    }

    match /bookings/{bookingId} {
      allow read, create: if isSignedIn();
    }
    
    match /users/{userId}/notifications/{notificationId} {
      allow read, list, write: if isOwner(userId);
    }

    match /ratings/{ratingId} {
      // Any signed-in user can create a rating.
      allow create: if isSignedIn() && isOwner(request.resource.data.userId);
      // Ratings are public, but cannot be changed or deleted by users.
      allow read: if true;
      allow update, delete: if false;
    }
  }
}