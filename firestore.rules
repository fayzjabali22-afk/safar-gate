
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    match /users/{userId} {
      allow read, write: if isOwner(userId);

      match /notifications/{notificationId} {
        allow read, list: if isOwner(userId);
        // Allow any signed-in user to create notifications for other users (for carrier notifications)
        allow create: if isSignedIn();
        allow write: if isOwner(userId);
      }
    }
    
    match /carriers/{carrierId} {
      allow read: if true;
      allow write: if isSignedIn(); // For dev, allow any user to create/update carriers
    }

    match /trips/{tripId} {
      allow read, list: if true;
      allow create: if isSignedIn();
      allow update: if isSignedIn(); // Allow any signed-in user to update for dev purposes
      allow delete: if isSignedIn() && isOwner(resource.data.userId);

      match /offers/{offerId} {
        allow read, list: if true; 
        allow create: if isSignedIn();
        allow update: if isSignedIn();
        allow delete: if false;
      }
    }

    match /bookings/{bookingId} {
      allow create: if isSignedIn() && isOwner(request.resource.data.userId);
      allow read: if isSignedIn() && (isOwner(resource.data.userId) || isOwner(resource.data.carrierId));
      allow delete: if isSignedIn() && isOwner(resource.data.userId);
      // Allow any signed-in user to update the booking for development purposes (simulating carrier confirmation).
      allow update: if isSignedIn();
    }

    match /ratings/{ratingId} {
      allow create: if isSignedIn() && isOwner(request.resource.data.userId);
      allow read: if true;
      allow update, delete: if false;
    }
  }
}
