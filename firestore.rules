rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- دوال مساعدة (Helper Functions) ---
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function isParticipant(data) {
       return isSignedIn() && (request.auth.uid in data.participants);
    }

    // --- المستخدمون (Users) ---
    match /users/{userId} {
      allow read, write: if isOwner(userId);
    }
    
    // --- الناقلون (Carriers) ---
    match /carriers/{carrierId} {
      allow read: if true; 
      allow write: if isOwner(carrierId); 
    }

    // --- الإشعارات (Notifications) ---
    match /notifications/{notificationId} {
      allow read, list, update: if isSignedIn() && resource.data.userId == request.auth.uid;
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
    }

    // --- الرحلات (Trips) ---
    match /trips/{tripId} {
      allow read: if isSignedIn() && isOwner(resource.data.userId);

      // This allows a logged-in user to query the collection.
      // The `read` rule above will ensure that only documents where the user is the owner are actually returned.
      allow list: if isSignedIn();

      allow create: if isSignedIn() && isOwner(request.resource.data.userId);
      
      allow update: if isSignedIn() && (
        isOwner(resource.data.userId) || 
        resource.data.carrierId == request.auth.uid
      );
      
      allow delete: if isOwner(resource.data.userId);

      // --- العروض (Offers) ---
      match /offers/{offerId} {
        allow read, list: if isSignedIn() && (
           get(/databases/$(database)/documents/trips/$(tripId)).data.userId == request.auth.uid ||
           resource.data.carrierId == request.auth.uid
        );
        
        allow create: if isSignedIn() && isOwner(request.resource.data.carrierId);
        allow update: if isSignedIn() && isOwner(resource.data.carrierId);
        allow delete: if isSignedIn() && isOwner(resource.data.carrierId);
      }
    }

    // --- الحجوزات (Bookings) ---
    match /bookings/{bookingId} {
      allow create: if isSignedIn() && isOwner(request.resource.data.userId);
      
      allow read: if isSignedIn() && (
        isOwner(resource.data.userId) || 
        isOwner(resource.data.carrierId)
      );
      
      allow update: if isSignedIn() && (
        isOwner(resource.data.userId) || 
        isOwner(resource.data.carrierId)
      );
      
      allow delete: if false; 
    }

    // --- التقييمات (Ratings) ---
    match /ratings/{ratingId} {
      allow create: if isSignedIn() && isOwner(request.resource.data.userId);
      allow read: if true;
      allow update, delete: if false;
    }

    // --- المحادثات (Chats) ---
    match /chats/{chatId} {
      allow create: if isParticipant(request.resource.data);
      allow read, update: if isSignedIn() && (request.auth.uid in resource.data.participants);
      
      allow list: if isSignedIn();

      match /messages/{messageId} {
        allow read, create: if isSignedIn() && 
          request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants;
        allow update, delete: if false;
      }
    }
  }
}
