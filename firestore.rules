
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    match /users/{userId} {
      // The user can read and write their own profile document.
      allow read, write: if isOwner(userId);

      // Rules for the 'notifications' subcollection
      match /notifications/{notificationId} {
        // The owner can list, read, and update their own notifications.
        // 'list' is crucial for useCollection to work.
        // 'read' is for fetching single notifications.
        // 'update' is for marking notifications as read.
        allow list, read, update: if isOwner(userId);

        // Any signed-in user (e.g., a carrier) can create a notification for another user.
        allow create: if isSignedIn();
      }
    }
    
    match /carriers/{carrierId} {
      allow read: if true;
      allow write: if isSignedIn(); // For dev, allow any user to create/update carriers
    }

    match /trips/{tripId} {
      allow read, list: if true;
      allow create: if isSignedIn();
      allow update: if isSignedIn(); // Allow any signed-in user to update for dev purposes
      allow delete: if isSignedIn() && isOwner(resource.data.userId);

      match /offers/{offerId} {
        allow read, list: if true; 
        allow create: if isSignedIn();
        allow update: if isSignedIn();
        allow delete: if false;
      }
    }

    match /bookings/{bookingId} {
      allow create: if isSignedIn() && isOwner(request.resource.data.userId);
      allow read: if isSignedIn() && (isOwner(resource.data.userId) || isOwner(resource.data.carrierId));
      allow delete: if isSignedIn() && isOwner(resource.data.userId);
      // Allow any signed-in user to update the booking for development purposes (simulating carrier confirmation).
      allow update: if isSignedIn();
    }

    match /ratings/{ratingId} {
      allow create: if isSignedIn() && isOwner(request.resource.data.userId);
      allow read: if true;
      allow update, delete: if false;
    }
  }
}
