{
  "entities": {
    "UserProfile": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "UserProfile",
      "type": "object",
      "description": "Represents a user profile in the system.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the user profile."
        },
        "firstName": {
          "type": "string",
          "description": "The first name of the user."
        },
        "lastName": {
          "type": "string",
          "description": "The last name of the user."
        },
        "email": {
          "type": "string",
          "description": "The email address of the user.",
          "format": "email"
        },
        "phoneNumber": {
          "type": "string",
          "description": "The phone number of the user."
        }
      },
      "required": [
        "id",
        "firstName",
        "lastName",
        "email"
      ]
    },
    "CarrierProfile": {
      "title": "CarrierProfile",
      "type": "object",
      "description": "Represents a carrier's profile in the system.",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "contactEmail": { "type": "string", "format": "email" },
        "phoneNumber": { "type": "string" },
        "averageRating": { "type": "number" }
      },
      "required": ["id", "name", "contactEmail"]
    },
    "Trip": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Trip",
      "type": "object",
      "description": "Represents an international transport trip.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the trip."
        },
        "userId": {
          "type": "string",
          "description": "ID of the user who created the trip."
        },
        "carrierId": {
          "type": "string",
          "description": "ID of the carrier providing the trip."
        },
        "origin": {
          "type": "string",
          "description": "The starting point of the trip."
        },
        "destination": {
          "type": "string",
          "description": "The final destination of the trip."
        },
        "departureDate": {
          "type": "string",
          "format": "date-time",
          "description": "The date and time of departure."
        },
        "arrivalDate": {
          "type": "string",
          "format": "date-time",
          "description": "The estimated date and time of arrival."
        },
        "status": {
          "type": "string",
          "enum": ["Planned", "In-Transit", "Completed", "Cancelled", "Awaiting-Offers"],
          "description": "The current status of the trip."
        },
        "cargoDetails": {
            "type": "string",
            "description": "Details about the cargo being transported."
        },
        "passengers": {
            "type": "number",
            "description": "Number of passengers for the trip."
        }
      },
      "required": [
        "id",
        "userId",
        "origin",
        "destination",
        "departureDate",
        "status",
        "passengers"
      ]
    },
    "Booking": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Booking",
      "type": "object",
      "description": "Represents a booking made by a user for a specific trip.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the booking."
        },
        "tripId": {
          "type": "string",
          "description": "ID of the associated trip."
        },
        "userId": {
          "type": "string",
          "description": "ID of the user who made the booking."
        },
        "carrierId": {
          "type": "string",
          "description": "ID of the carrier providing the trip."
        },
        "seats": {
          "type": "number",
          "description": "Number of seats booked."
        },
        "status": {
            "type": "string",
            "enum": ["Confirmed", "Pending-Payment", "Cancelled", "Completed"],
            "description": "The status of the booking."
        },
        "totalPrice": {
            "type": "number",
            "description": "Total price for the booking."
        }
      },
      "required": [
        "id",
        "tripId",
        "userId",
        "carrierId",
        "seats",
        "status"
      ]
    },
    "Offer": {
      "title": "Offer",
      "type": "object",
      "description": "Represents an offer made by a carrier for a specific trip request.",
      "properties": {
        "id": { "type": "string", "description": "Unique identifier for the offer." },
        "tripId": { "type": "string", "description": "ID of the trip request this offer is for." },
        "carrierId": { "type": "string", "description": "ID of the carrier making the offer." },
        "price": { "type": "number", "description": "The price offered by the carrier for the trip." },
        "notes": { "type": "string", "description": "Optional notes from the carrier." },
        "status": {
          "type": "string",
          "enum": ["Pending", "Accepted", "Rejected"],
          "description": "The current status of the offer."
        },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["id", "tripId", "carrierId", "price", "status", "createdAt"]
    },
    "Notification": {
        "title": "Notification",
        "type": "object",
        "description": "Represents a notification for a user.",
        "properties": {
            "id": {
                "type": "string",
                "description": "Unique identifier for the notification."
            },
            "userId": {
                "type": "string",
                "description": "ID of the user who receives the notification."
            },
            "title": {
                "type": "string",
                "description": "The title of the notification."
            },
            "message": {
                "type": "string",
                "description": "The main content of the notification."
            },
            "type": {
                "type": "string",
                "enum": ["new_offer", "booking_confirmed", "trip_update", "payment_reminder", "rating_request"],
                "description": "The type of the notification."
            },
            "isRead": {
                "type": "boolean",
                "description": "Whether the user has read the notification."
            },
            "createdAt": {
                "type": "string",
                "format": "date-time",
                "description": "The timestamp when the notification was created."
            },
            "link": {
                "type": "string",
                "description": "A URL link to navigate to when the notification is clicked."
            }
        },
        "required": ["id", "userId", "title", "message", "type", "isRead", "createdAt"]
    },
    "Rating": {
      "title": "Rating",
      "type": "object",
      "description": "Represents a rating given by a user to a carrier for a trip.",
      "properties": {
        "id": { "type": "string" },
        "tripId": { "type": "string" },
        "carrierId": { "type": "string" },
        "userId": { "type": "string" },
        "ratingValue": { "type": "number" },
        "comment": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["id", "tripId", "carrierId", "userId", "ratingValue", "createdAt"]
    }
  },
  "auth": {
    "providers": [
      "password",
      "anonymous",
      "google.com"
    ]
  },
  "firestore": {
    "structure": [
      {
        "path": "/users/{userId}",
        "definition": {
          "entityName": "UserProfile",
          "schema": {
            "$ref": "#/backend/entities/UserProfile"
          },
          "description": "Stores user profiles, secured by user ID.",
          "params": [
            {
              "name": "userId",
              "description": "The unique identifier for the user."
            }
          ]
        }
      },
      {
        "path": "/carriers/{carrierId}",
        "definition": {
          "entityName": "CarrierProfile",
          "schema": { "$ref": "#/backend/entities/CarrierProfile" },
          "description": "Stores public profiles for carriers."
        }
      },
      {
        "path": "/users/{userId}/notifications/{notificationId}",
        "definition": {
            "entityName": "Notification",
            "schema": {
                "$ref": "#/backend/entities/Notification"
            },
            "description": "Stores notifications for a specific user.",
            "params": [
                {
                    "name": "userId",
                    "description": "The unique identifier for the user."
                },
                {
                    "name": "notificationId",
                    "description": "The unique identifier for the notification."
                }
            ]
        }
      },
      {
        "path": "/trips/{tripId}",
        "definition": {
          "entityName": "Trip",
          "schema": {
            "$ref": "#/backend/entities/Trip"
          },
          "description": "Stores trip details, accessible by the creating user.",
          "params": [
            {
              "name": "tripId",
              "description": "The unique identifier for the trip."
            }
          ]
        }
      },
      {
        "path": "/trips/{tripId}/offers/{offerId}",
        "definition": {
          "entityName": "Offer",
          "schema": { "$ref": "#/backend/entities/Offer"},
          "description": "Stores offers made by carriers for a specific trip request.",
           "params": [
            {
              "name": "tripId",
              "description": "The unique identifier for the trip."
            },
            {
              "name": "offerId",
              "description": "The unique identifier for the offer."
            }
          ]
        }
      },
      {
        "path": "/bookings/{bookingId}",
        "definition": {
          "entityName": "Booking",
          "schema": {
            "$ref": "#/backend/entities/Booking"
          },
          "description": "Stores booking details, linking users to trips.",
          "params": [
            {
              "name": "bookingId",
              "description": "The unique identifier for the booking."
            }
          ]
        }
      },
      {
        "path": "/ratings/{ratingId}",
        "definition": {
          "entityName": "Rating",
          "schema": { "$ref": "#/backend/entities/Rating" },
          "description": "Stores ratings for trips provided by carriers."
        }
      }
    ]
  }
}